@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<h1>Delete Category</h1>
<form method="post">
    <input asp-for="Category.Id" hidden>
    <div class="mb-3">
        <label asp-for="Category.Name" for="categoryName" class="form-label"></label>
        <input asp-for="Category.Name" disabled type="text" class="form-control" id="categoryName">
    </div>

    <div class="mb-3">
        <label asp-for="Category.DisplayOrder" for="categoryName" class="form-label"></label>
        <input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" id="categoryName">
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/categories/index" class="btn btn-secondary form-control">Back</a>
        </div>
    </div>
</form>
