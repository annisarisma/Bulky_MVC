@model List<Category>

<div class="text-end mb-4">
	<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
		<i class="bi bi-plus-lg"></i> Create Category
	</a>
</div>

<table id="myTable" class="display">
    <thead>
        <tr>
			<th>Categeory Name</th>
			<th>Display Order</th>
        </tr>
    </thead>
    <tbody>
		@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<th>@obj.Name</th>
				<th>@obj.DisplayOrder</th>
			</tr>
		}
    </tbody>
</table>